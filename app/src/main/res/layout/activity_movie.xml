<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".activities.MovieActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            style="@style/match_match"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_backdrop"
                style="@style/match_match"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        style="@style/match_match"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            style="@style/linear_layout_full_vertical"
            android:paddingBottom="@dimen/dimen_50dp"
            android:paddingTop="24dp">


            <LinearLayout
                style="@style/row"
                android:padding="@dimen/dimen_16dp">

                <LinearLayout style="@style/col40">

                    <ImageView
                        android:id="@+id/iv_poster"
                        style="@style/match_wrap"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_movie_thumb" />

                </LinearLayout>

                <LinearLayout
                    style="@style/col60"
                    android:paddingLeft="@dimen/dimen_10dp">

                    <RelativeLayout style="@style/match_match">

                        <ProgressBar
                            android:id="@+id/pb_info"
                            style="@style/match_match"
                            android:layout_marginTop="@dimen/dimen_30dp" />

                        <LinearLayout
                            android:id="@+id/ll_info"
                            style="@style/linear_layout_full_vertical">

                            <TextView
                                style="@style/match_wrap"
                                android:paddingTop="@dimen/dimen_16dp"
                                android:text="@string/release_date"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />


                            <TextView
                                android:id="@+id/tv_release_date"
                                style="@style/match_wrap"
                                android:layout_marginBottom="@dimen/dimen_16dp"
                                android:inputType="textCapSentences"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <TextView
                                style="@style/match_wrap"
                                android:text="@string/vote_average"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <TextView
                                android:id="@+id/tv_vote_average"
                                style="@style/match_wrap"
                                android:layout_marginBottom="@dimen/dimen_16dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                            <TextView
                                style="@style/match_wrap"
                                android:text="@string/runtime"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <TextView
                                android:id="@+id/tv_runtime"
                                style="@style/match_wrap"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/linear_layout_full_vertical"
                android:padding="@dimen/dimen_16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/tv_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_trailers"
                style="@style/linear_layout_full_vertical"
                android:padding="@dimen/dimen_16dp"
                android:visibility="gone">

                <View
                    style="@style/divider"
                    android:layout_marginTop="@dimen/dimen_16dp" />


                <TextView
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="@string/trailers"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_trailers"
                    style="@style/match_wrap" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reviews"
                style="@style/linear_layout_full_vertical"
                android:padding="@dimen/dimen_16dp"
                android:visibility="gone">

                <View
                    style="@style/divider"
                    android:layout_marginTop="@dimen/dimen_16dp" />

                <TextView
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:text="@string/reviews"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />


                <TextView
                    android:id="@+id/reviews_test"
                    style="@style/match_wrap" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    style="@style/match_wrap" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_favorite_off"
        app:backgroundTint="@color/colorWhite"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom|right" />

</android.support.design.widget.CoordinatorLayout>
















