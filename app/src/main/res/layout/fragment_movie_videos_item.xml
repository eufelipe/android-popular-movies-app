<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/dimen_280dp"
    android:layout_height="@dimen/dimen_200dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/dimen_4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout style="@style/wrap_wrap">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/dimen_280dp"
            android:layout_height="@dimen/dimen_200dp"
            android:contentDescription="@string/app_imageview_video_description"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_movie_thumb" />

        <ImageView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
